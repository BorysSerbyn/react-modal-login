{
  "name": "react-modal-login",
  "version": "1.0.3",
  "description": "A highly customizable react login modal with social buttons",
  "main": "src/react-modal-login-compiled.min.js",
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-watch": "^2.0.6",
    "babelify": "^7.3.0",
    "bootstrap": "^3.3.7",
    "classnames": "^2.1.3",
    "concurrently": "^3.1.0",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "less-watch-compiler": "^1.8.0",
    "object-assign": "^4.1.1",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-proxy": "^1.1.8",
    "reactify": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "browserify": "^14.4.0",
    "livereactload": "^3.3.0",
    "browserify-shim": "^3.8.12",
    "bundle-collapser": "^1.2.1",
    "envify": "^4.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "uglify-js": "^3.0.18",
    "uglify-js-es6": "^2.8.9",
    "uglifyify": "^4.0.1",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "watch-css": "less-watch-compiler src/less ./demo style.less",
    "build-css": "lessc --clean-css=\"--s1 --advanced --compatibility=ie8\" ./src/less/style.less ./src/style.min.css",
    "build-babel": "babel ./src/react-modal-login.js -v -o ./src/react-modal-login-compiled.js",
    "build-js": "browserify ./src/react-modal-login-compiled.js -g [ envify --NODE_ENV production ] -g uglifyify -p bundle-collapser/plugin | uglifyjs --compress --mangle > ./src/react-modal-login-compiled.min.js",
    "build-dev": "node_modules/.bin/watchify --poll=500 ./demo/es/index.js -v -t babelify -p livereactload -o ./demo/bundle-compiled.js",
    "build-prod": "npm-run-all -s build-css build-babel",
    "start": "concurrently -k \"npm run build-dev\" \"npm run watch-css\""
  },
  "author": "The Beaverhead",
  "person": {
    "name": "Olaf Meller",
    "email": "meller.olaf@gmail.com"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
